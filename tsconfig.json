{
    "compilerOptions": {
        "noEmit": true,
        "pretty": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "module": "es6",
        "target": "es6",
        "jsx": "react",
        "baseUrl": "src/scripts",
        "moduleResolution": "node",
        "rootDirs": ["src/scripts"],
        "typeRoots": ["node_modules/@types", "@types"],
        "lib": ["es2017", "dom.iterable", "dom"],
        "resolveJsonModule": true
    },
    "exclude": ["node_modules"]
}
